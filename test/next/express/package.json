{
  "name": "express-server-project",
  "version": "0.1.0",
  "description": "Express Application with MOST Web Framework",
  "main": "dist/server/server.js",
  "repository": "",
  "private": true,
  "author": "",
  "scripts": {
    "start": "node bin/www.js",
    "clean": "rimraf dist/server",
    "build": "rimraf dist/server && babel server --out-dir dist/server --copy-files --source-maps",
    "themost": "themost",
    "serve": "nodemon bin/www.js",
    "debug": "nodemon --inspect-brk bin/www.js"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  },
  "dependencies": {
    "@themost/web": "file:../../../modules/@themost/web3",
    "express": "~4.16.0"
  },
  "nodemonConfig": {
    "watch": [
      "server",
      "bin"
    ],
    "ignore": [
        "./node_modules/**/*"
    ],
    "verbose": true,
    "legacy-watch": true,
    "execMap": {
      "js": "node --require @babel/register"
    },
    "env": {
      "NODE_ENV": "development",
      "IP": "0.0.0.0"
    },
    "ext": "js,json"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jquery": true
    },
    "globals": {
      "describe": false,
      "it": false,
      "before": false,
      "after": false
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "off",
      "no-invalid-this": "warn",
      "no-undef": "error",
      "no-unused-vars": "warn",
      "no-var": [
        "error"
      ],
      "strict": [
        2,
        "never"
      ]
    }
  }
}
